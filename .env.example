# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://family_office:password@localhost:5432/family_office_db
DATABASE_TEST_URL=postgresql://family_office:password@localhost:5432/family_office_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Encryption
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# External API Keys
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
IEX_CLOUD_API_KEY=your-iex-cloud-key
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox
ZILLOW_API_KEY=your-zillow-api-key

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security Settings
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=INFO

# Performance Settings
CACHE_DEFAULT_TIMEOUT=300
RATE_LIMIT_DEFAULT=100/hour

# Portfolio Configuration
DEFAULT_RISK_FREE_RATE=0.02
DEFAULT_MARKET_SYMBOL=^GSPC
PORTFOLIO_UPDATE_INTERVAL=300

# Agent Configuration
AGENT_CONFIDENCE_THRESHOLD=0.7
MAX_AGENT_PROCESSING_TIME=30
AGENT_RETRY_ATTEMPTS=3

# Development Settings
DEBUG=True
TESTING=False
WTF_CSRF_ENABLED=False